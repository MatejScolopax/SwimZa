<?xml version="1.0" encoding="utf-8"?>
<scolopax.sk.swimza.ui.ScrollingView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView_sauna"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sauna">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/toolbar_double_height">

        <LinearLayout
            style="@style/container"
            android:orientation="vertical">

            <LinearLayout
                style="@style/container"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    style="@style/h2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text="@string/sauna_select"
                    android:textColor="@color/darkgrey" />

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_women"
                        style="@style/label"
                        android:layout_width="wrap_content"
                        android:text="@string/sauna_women" />

                    <RadioButton
                        android:id="@+id/radio_men"
                        style="@style/label"
                        android:layout_width="wrap_content"
                        android:text="@string/sauna_men" />

                    <RadioButton
                        android:id="@+id/radio_together"
                        style="@style/label"
                        android:text="@string/sauna_together" />
                </RadioGroup>
            </LinearLayout>

            <!-- pondelok -->

            <LinearLayout
                style="@style/container"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/h3"
                        android:text="@string/day_moday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/v_sauna_monday"
                        style="@style/h3" />
                </LinearLayout>
            </LinearLayout>
            <!-- utorok -->

            <LinearLayout
                style="@style/container"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/h3"
                        android:text="@string/day_tuesday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/v_sauna_tuesday"
                        style="@style/h3" />
                </LinearLayout>
            </LinearLayout>

            <!-- streda -->

            <LinearLayout
                style="@style/container"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/h3"
                        android:text="@string/day_wednesday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/v_sauna_wednesday"
                        style="@style/h3" />
                </LinearLayout>
            </LinearLayout>

            <!-- stvrtok -->

            <LinearLayout
                style="@style/container"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView

                        style="@style/h3"
                        android:text="@string/day_thursday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/v_sauna_thursday"
                        style="@style/h3" />
                </LinearLayout>
            </LinearLayout>

            <!-- piatok -->

            <LinearLayout
                style="@style/container"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/h3"
                        android:text="@string/day_friday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/v_sauna_friday"
                        style="@style/h3" />
                </LinearLayout>
            </LinearLayout>

            <!-- sobota -->

            <LinearLayout
                style="@style/container"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/h3"
                        android:text="@string/day_saturday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/v_sauna_saturday"
                        style="@style/h3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/container"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        style="@style/h3"
                        android:text="@string/day_sunday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/v_sauna_sunday"
                        style="@style/h3" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/btn_page"
                    style="@style/button_flat"
                    android:text="@string/sauna_check_online"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</scolopax.sk.swimza.ui.ScrollingView>